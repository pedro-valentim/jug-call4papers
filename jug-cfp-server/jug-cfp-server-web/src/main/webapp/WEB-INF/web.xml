<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
	<display-name>JUG Vale CFP</display-name>
	<context-param>
		<param-name>resteasy.role.based.security</param-name>
		<param-value>true</param-value>
	</context-param>
	<security-constraint>
		<display-name>Segurança do REST Padrão</display-name>
		<!-- Toda Edição e Deleção é segura e reservada ao administrador -->
		<web-resource-collection>
			<web-resource-name>rest</web-resource-name>
			<url-pattern>/rest/*</url-pattern>
			<http-method>DELETE</http-method>
			<http-method>PUT</http-method>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>Página de administração</web-resource-name>
			<url-pattern>/adm.html</url-pattern>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>ADMINISTRADOR</role-name>
		</auth-constraint>
	</security-constraint>
	<!-- Só administrador cria evento -->
	<security-constraint>
		<display-name>Segurança do REST para Evento</display-name>
		<web-resource-collection>
			<web-resource-name>rest</web-resource-name>
			<url-pattern> /rest/evento</url-pattern>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>ADMINISTRADOR</role-name>
		</auth-constraint>
	</security-constraint>
	<!-- Só administrador cria acessa autor diretamente -->
	<security-constraint>
		<display-name>Segurança do REST para Autor</display-name>
		<web-resource-collection>
			<web-resource-name>rest</web-resource-name>
			<url-pattern>/rest/autor/*</url-pattern>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>ADMINISTRADOR</role-name>
		</auth-constraint>
	</security-constraint>
	<!-- Só administrador acessa todos os campos dos inscritos em um evento -->
	<security-constraint>
		<display-name>Segurança do REST para Inscritos no evento</display-name>
		<web-resource-collection>
			<web-resource-name>rest</web-resource-name>
			<url-pattern>/rest/evento/admin/*</url-pattern>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>ADMINISTRADOR</role-name>
		</auth-constraint>
	</security-constraint>
	<!-- Só administrador acessa e sobe backup -->
	<security-constraint>
		<display-name>Segurança do REST para Inscritos no evento</display-name>
		<web-resource-collection>
			<web-resource-name>rest</web-resource-name>
			<url-pattern>/rest/backup/*</url-pattern>
			<http-method>POST</http-method>
			<http-method>PUT</http-method>
			<http-method>DELETE</http-method>
			<http-method>GET</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>ADMINISTRADOR</role-name>
		</auth-constraint>
	</security-constraint>
	
	<!-- Só administrador marca inscritos -->
	<security-constraint>
		<display-name>Segurança do REST para Inscritos no evento</display-name>
		<web-resource-collection>
			<web-resource-name>rest</web-resource-name>
			<url-pattern>/rest/inscritos/*</url-pattern>
			<http-method>POST</http-method>
		</web-resource-collection>
		<auth-constraint>
			<role-name>ADMINISTRADOR</role-name>
		</auth-constraint>
	</security-constraint>	

<!--  A página admin precisa disso... -->
	<servlet>
		<servlet-name>RESTEasy JSAPI</servlet-name>
		<servlet-class>org.jboss.resteasy.jsapi.JSAPIServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>RESTEasy JSAPI</servlet-name>
		<url-pattern>/rest-js</url-pattern>
	</servlet-mapping>
	<login-config>
		<auth-method>BASIC</auth-method>
		<realm-name>ApplicationRealm</realm-name>
	</login-config>
	<security-role>
		<role-name>ADMINISTRADOR</role-name>
	</security-role>
	<security-role>
		<role-name>ANONIMO</role-name>
	</security-role>
</web-app>
